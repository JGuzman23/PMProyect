{
	"info": {
		"_postman_id": "projectflow-api-collection",
		"name": "ProjectFlow API",
		"description": "Colección de Postman para ProjectFlow - Sistema de gestión de proyectos multitenant",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "1. Register (Crear Empresa + Usuario)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    ",
									"    // Guardar tokens en variables de colección",
									"    pm.collectionVariables.set('accessToken', response.tokens.accessToken);",
									"    pm.collectionVariables.set('refreshToken', response.tokens.refreshToken);",
									"    pm.collectionVariables.set('subdomain', response.company.subdomain);",
									"    pm.collectionVariables.set('userId', response.user.id);",
									"    ",
									"    console.log('✅ Empresa y usuario creados exitosamente');",
									"    console.log('Subdomain:', response.company.subdomain);",
									"    console.log('Email:', response.user.email);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@empresa1.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Juan\",\n  \"lastName\": \"Pérez\",\n  \"companyName\": \"Empresa Demo\",\n  \"subdomain\": \"empresa1\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						},
						"description": "Crea una nueva empresa y un usuario administrador. El subdomain debe ser único y solo puede contener letras minúsculas, números y guiones."
					},
					"response": []
				},
				{
					"name": "2. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    ",
									"    // Guardar tokens en variables de colección",
									"    pm.collectionVariables.set('accessToken', response.tokens.accessToken);",
									"    pm.collectionVariables.set('refreshToken', response.tokens.refreshToken);",
									"    ",
									"    console.log('✅ Login exitoso');",
									"    console.log('Usuario:', response.user.email);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "x-tenant-id",
								"value": "{{subdomain}}",
								"description": "Subdomain de la empresa (ej: empresa1)"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@empresa1.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Inicia sesión con email y contraseña. Requiere el header x-tenant-id con el subdomain de la empresa."
					},
					"response": []
				},
				{
					"name": "3. Get Current User (Me)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							},
							{
								"key": "x-tenant-id",
								"value": "{{subdomain}}",
								"description": "Subdomain de la empresa"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"me"
							]
						},
						"description": "Obtiene la información del usuario actual autenticado."
					},
					"response": []
				},
				{
					"name": "4. Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('accessToken', response.accessToken);",
									"    console.log('✅ Token refrescado');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/refresh",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"refresh"
							]
						},
						"description": "Refresca el access token usando el refresh token."
					},
					"response": []
				},
				{
					"name": "5. Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							},
							{
								"key": "x-tenant-id",
								"value": "{{subdomain}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/auth/logout",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"logout"
							]
						},
						"description": "Cierra sesión y elimina el refresh token del usuario."
					},
					"response": []
				}
			],
			"description": "Endpoints de autenticación"
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Verifica que el servidor esté funcionando correctamente."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "subdomain",
			"value": "empresa1",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		}
	]
}









